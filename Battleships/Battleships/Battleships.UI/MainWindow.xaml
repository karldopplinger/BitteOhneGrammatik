<Window x:Class="Battleships.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleships.UI"
        mc:Ignorable="d"
        Title="Battleship Game" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Shooting Grid (Top) -->
        <UniformGrid x:Name="ShootingGrid" Rows="10" Columns="10" Grid.Row="0" Margin="10"/>

        <!-- Placement Grid (Bottom) -->
        <UniformGrid x:Name="PlacementGrid" Rows="10" Columns="10" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>